    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "SimTrain (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--simtrain", "--taskconfig", "/home/lee/code/isaactasks/ant/taskconfig.yaml"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "SimPlay (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["--simplay", "--taskconfig", "/home/lee/code/isaactasks/ant/taskconfig.yaml"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Refine (main.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--refine", 
                "--refineconfig", "/home/lee/code/Isaac-Sim2Real-Pipeline/configs/refineconfig.yaml", 
                "--taskconfig", "/home/lee/code/isaactasks/ant/taskconfig.yaml"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}